class jogopoker{
	int num1,num2, quantidade=0, moedas;
	bool at=true;
	sound s;
	void jogar(){
		s.load("musica11.ogg");
		s.play_looped();
		add_add_item("variado", pu.get_value("Escolha 1 para pedra, 2 para papel, 3 para tesoura ou ESC para sair. Espaço para definir a quantidade que irá apostar, entre 100 à 1000 coins."));
		while(true){
			wait(5);
			mainloop();
			if(ausente){
				break;
			}
			moedas=inv_item_number("coins");
			if(at==true){
				num2=random(1,3);
				at=false;
			}
			if(key_pressed(KEY_ESCAPE)){
				s.close();
				p.play_stationary("menuvolta.ogg", false);
				break;
			}
			if(key_pressed(KEY_SPACE)&&quantidade<=0){
				string quanto=v.input(pu.get_value("Quantos coins você quer apostar?"));
				quantidade=string_to_number(quanto);
				if(quantidade<100||quantidade>1000){
					add_add_item("variado", pu.get_value("O valor para apostar tem que ser de")+" 100 "+pu.get_value("até")+" 1000.");
					quantidade=0;
				}
				if(quantidade>moedas){
					add_add_item("variado", pu.get_value("Você não tem")+" "+quantidade+" "+pu.get_value("coins para apostar."));
					quantidade=0;
				}
			}
			if(key_pressed(KEY_1)&&quantidade>0){
				num1=1;
				checar();
			}
			else if(key_pressed(KEY_2)&&quantidade>0){
				num1=2;
				checar();
			}
			else if(key_pressed(KEY_3)&&quantidade>0){
				num1=3;
				checar();
			}
		}
	}
	void checar(){
		if(num1==1&&num2==1){
			add_add_item("variado", pu.get_value("Uou! pedra e pedra! é um impate!"));
		}
		else if(num1==2&&num2==2){
			add_add_item("variado", pu.get_value("Uou! papel e papel! é um impate!"));
		}
		else if(num1==3&&num2==3){
			add_add_item("variado", pu.get_value("Uou! tesoura e tesoura! é um impate!"));
		}
		else{
			if(num1==1){
				if(num2==2){
					add_add_item("variado", pu.get_value("Rá! papel embrulha pedra! eu ganhei! você não é de nada!"));
					send_reliable(0, "acoins -"+quantidade, 2);
				}
				else if(num2==3){
					add_add_item("variado", pu.get_value("Ops, pedra quebra tesoura, parabéns, você ganhou!"));
					send_reliable(0, "acoins "+quantidade, 0);
				}
			}
			if(num1==2){
				if(num2==1){
					add_add_item("variado", pu.get_value("Ops, papel embrulha pedra, parabéns! você ganhou!"));
					send_reliable(0, "acoins "+quantidade, 2);
				}
				else if(num2==3){
					add_add_item("variado", pu.get_value("Rá! tesoura corta papel! eu ganhei! você não é de nada!"));
					send_reliable(0, "acoins -"+quantidade, 2);
				}
			}
			else if(num1==3){
				if(num2==1){
					add_add_item("variado", pu.get_value("Rá! pedra quebra tesoura! eu ganhei! você não é de nada!"));
					send_reliable(0, "acoins -"+quantidade, 2);
				}
				else if(num2==2){
					add_add_item("variado", pu.get_value("Ops, tesoura corta papel, parabéns, você ganhou!"));
					send_reliable(0, "acoins "+quantidade, 2);
				}
			}
		}
		at=true;
	}
}
