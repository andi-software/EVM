class jogoparouimpar{
	int moedas, quantidade;
	string tescolha;
	sound s, ambiente;
	void fim(){
		s.close();
		ambiente.close();
	}
	void jogar(){
		if(ausente)return;
		if(inv_item_number("coins")<500) return;
		add_add_item("variado", pu.get_value("Par ou ímpar!"));
		ambiente.load("musica14.ogg");
		ambiente.volume=-20;
		ambiente.play_looped();
		while(true){
			mainloop();
			if(ausente){
				fim();
				break;
			}
			moedas=inv_item_number("coins");
			if(moedas<=0){
				p.play_stationary("notify_died.ogg", false);
				send_reliable(0, "draw notify_died.ogg", 0);
				fim();
				break;
			}
			if(key_pressed(KEY_ESCAPE)){
				p.play_stationary("menuvolta.ogg", false);
				fim();
				break;
			}
			if(key_pressed(KEY_H)){
				add_add_item("variado", pu.get_value("Para definir a quantidade de coins que deseja apostar, pressione 1, digite o valor e enter."));
			}
			if(key_pressed(KEY_C)) add_add_item("variado", pu.get_value("Você tem")+" "+moedas+" "+pu.get_value("coins para apostar."));
			if(key_pressed(KEY_1)){
				string quanto=v.input("Quantos coins você quer apostar?");
				quantidade=string_to_number(quanto);
				if(quantidade>moedas){
					add_add_item("variado", pu.get_value("Você não tem")+" "+quantidade+" "+pu.get_value("coins para apostar."));
					quantidade=0;
				}
				if(quantidade<500||quantidade>1000){
					add_add_item("variado", pu.get_value("O valor para apostar tem que ser de 500 à 1000."));
					quantidade=0;
				}
			}
			if(key_pressed(KEY_2)){
				setupmenu();
				m.add_item_tts(pu.get_value("Par"), "Par");
				m.add_item_tts(pu.get_value("Ímpar"), "Ímpar");
				m.add_item_tts(pu.get_value("Voltar"), "voltar");
				int mres=m.run(pu.get_value("Escolha o tipo  de número que deseja apostar."), true);
				if(m.get_item_name(mres)!="voltar") tescolha=m.get_item_name(mres);
			}
			if(key_pressed(KEY_RETURN)){
				if(quantidade<500||quantidade>1000 || tescolha=="") add_add_item("variado", pu.get_value("Você deve definir a quantia e escolher o tipo de número que irá apostar!"));
				else{
					add_add_item("variado", pu.get_value("Randomisando os números de 1 à 10..."));
					s.close();
					s.load("dado1.ogg");
					s.play();
					send_reliable(0, "draw dado1.ogg", 0);
					while(s.playing){
						wait(5);
						mainloop();
					}
					int resultado=random(1, 10);
					if(resultado==1||resultado==3||resultado==5||resultado==7||resultado==9){
						if(tescolha=="Ímpar"){
							add_add_item("variado", pu.get_value("Boa, o número é ímpar!"));
							send_reliable(0, "acoins "+quantidade, 2);
							tescolha="";
							fim();
							break;
						}
						else if(tescolha=="Par"){
							add_add_item("variado", pu.get_value("O número é ímpar, eu ganhei!"));
							send_reliable(0, "acoins -"+quantidade, 2);
							tescolha="";
							fim();
							break;
						}
					}
					else if(resultado==2||resultado==4||resultado==6||resultado==8||resultado==10){
						if(tescolha=="Par"){
							add_add_item("variado", pu.get_value("Boa, o número é par!"));
							send_reliable(0, "acoins "+quantidade, 2);
							tescolha="";
							fim();
							break;
						}
						else if(tescolha=="Ímpar"){
							add_add_item("variado", pu.get_value("O número é par, eu ganhei!"));
							send_reliable(0, "acoins -"+quantidade, 2);
							tescolha="";
							fim();
							break;
						}
					}
				}
			}
		}
	}
}
